{
  "name": "adaptive-palette",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "run-s build:* start:server",
    "build:client": "vite build",
    "build:server": "tsc --project tsconfig.server.json",
    "start:server": "node dist/server/src/server/server.js",
    "dev": "run-p dev:* start:devServer",
    "dev:watchClient": "vite build --watch",
    "dev:watchServer": "tsc --project tsconfig.server.json --watch",
    "start:devServer": "nodemon dist/server/src/server/server.js",
    "serveLocalApps": "vite dev ./apps --port 5173 --base '/apps'",
    "serveLocalDemos": "vite dev ./demos --port 5174 --base '/demos'",
    "lint": "run-p lint:*",
    "lint:js": "eslint .",
    "lint:markdown": "markdownlint-cli2 \"./**/*.md\" \"#node_modules\" \"#dist\"",
    "test": "jest"
  },
  "dependencies": {
    "@preact/signals": "^1.2.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.10",
    "@types/serve-static": "^1.15.7",
    "bliss-svg-builder": "^0.1.0-alpha.4",
    "express": "^4.19.2",
    "htm": "^3.1.1",
    "ollama": "^0.5.0",
    "preact": "^10.13.1",
    "sass": "^1.77.8 ",
    "serve-static": "^1.15.0",
    "whatwg-fetch": "^3.6.19"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.14",
    "@preact/preset-vite": "^2.9.0",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/preact": "^3.2.3",
    "@types/jest": "^29.5.4",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "babel-jest": "^29.6.4",
    "eslint": "^8.57.0",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.6.4",
    "markdownlint-cli2": "^0.13.0",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.5.3",
    "vite": "^5.3.3"
  }
}
